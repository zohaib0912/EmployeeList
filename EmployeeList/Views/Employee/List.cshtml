@{
}
@model List<EmployeeList.Models.Employee>

<h1>Employees List</h1>

<table class="table 1px solid black border-1" >
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Employee Post</th>
            <th>Salary</th>
            <th>Experience</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.EmployeeFName</td>
                <td>@employee.EmployeeLName</td>
                <td>@employee.Email</td>
                <td>@employee.Age</td>
                <td>@employee.EmployeePost</td>
                <td>@employee.Salary</td>
                <td>@employee.Experience</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Employee" asp-action= "Edit"asp-route-id="@employee.Id">Edit</a>


                    <form asp-controller="Employee" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@employee.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-4">
<a class="btn btn-primary" asp-controller="Employee"asp-action="AddEmployee">Add Employee</a>
</div>